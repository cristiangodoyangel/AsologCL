---
const services = [
	{
		title: "Transporte Terrestre",
		description: "Flota moderna para entregas nacionales e internacionales con seguimiento en tiempo real.",
		icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0"></path></svg>`
	},
	{
		title: "Carga Aérea",
		description: "Soluciones rápidas para envíos urgentes a cualquier parte del mundo.",
		icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path></svg>`
	},
	{
		title: "Transporte Marítimo",
		description: "Gestión eficiente de contenedores y carga consolidada para operaciones globales.",
		icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>` // Using lightning for speed/efficiency metaphor as ship is complex
	},
	{
		title: "Gestión Aduanera",
		description: "Asesoría experta en trámites de importación y exportación para evitar retrasos.",
		icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path></svg>`
	},
	{
		title: "Almacenaje y Distribución",
		description: "Centros de distribución estratégicos para optimize su cadena de suministro.",
		icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path></svg>`
	},
	{
		title: "Seguro de Carga",
		description: "Protección total para su mercancía desde origen hasta destino final.",
		icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path></svg>`
	}
];
---
<section id="services" class="section">
	<div class="container">
		<div class="section-header text-center mb-lg">
			<h2 class="animate-reveal">Nuestros Servicios</h2>
			<p class="animate-reveal delay-1">Soluciones integrales adaptadas a las necesidades de su negocio.</p>
		</div>
		
		<div class="services-grid">
			{services.map((service, index) => (
				<div class={`service-card animate-reveal delay-${index % 3 + 1}`}>
					<div class="icon-wrapper" set:html={service.icon} />
					<h3>{service.title}</h3>
					<p>{service.description}</p>
					<a href="#" class="learn-more">Saber más &rarr;</a>
				</div>
			))}
		</div>
	</div>
</section>

<style>
	.services-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
		gap: 2rem;
	}

	.service-card {
		background: white;
		padding: 2rem;
		border-radius: var(--border-radius);
		box-shadow: var(--shadow-md);
		transition: var(--transition-base);
		border: 1px solid rgba(0,0,0,0.05);
		display: flex;
		flex-direction: column;
		align-items: flex-start;
		height: 100%;
	}

	.service-card:hover {
		transform: translateY(-10px);
		box-shadow: var(--shadow-xl);
		border-color: var(--color-primary-light);
	}

	.icon-wrapper {
		width: 60px;
		height: 60px;
		background: var(--color-bg-secondary);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		margin-bottom: 1.5rem;
		color: var(--color-primary);
		transition: var(--transition-base);
	}
	
	.service-card:hover .icon-wrapper {
		background: var(--color-primary);
		color: white;
		transform: scale(1.1) rotate(5deg);
	}

	h3 {
		font-size: 1.5rem;
		margin-bottom: 1rem;
		color: var(--color-primary-dark);
	}

	p {
		color: var(--color-text-light);
		margin-bottom: 1.5rem;
		line-height: 1.6;
		flex-grow: 1;
	}

	.learn-more {
		color: var(--color-accent-dark);
		font-weight: 600;
		display: inline-flex;
		align-items: center;
		transition: transform 0.3s ease;
	}

	.learn-more:hover {
		transform: translateX(5px);
		color: var(--color-primary);
	}
</style>
